.momentous-container
  position: relative
  display: inline-block
  margin: 0 20px 20px 0

  .input-append
    width: 244px

  .momentous-input
    position: absolute
    text-align: center
    left: 0px
    width: 204px
    font-size: 16px
    height: 34px
    padding: 0px
    margin: 0px
    font-weight: bold
    color: #222
    cursor: pointer
    background: #fff
    user-select: none

  .momentous-cal-button
    position: absolute
    right: 0px
    height: 34px
    width: 40px

  .momentous-dropdown
    position: absolute
    top: 34px
    background: white
    display: block
    width: 240px
    border: solid 1px #ccc
    border-radius: 4px
    display: none
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

    .momentous-nav
      height: 20px
      padding: 8px 0px 8px 8px

      .view-button
        display: inline-block
        text-align: center
        width: 140px

      span
        height: 17px
        padding: 8px
        border-radius: 4px
        cursor: pointer
        line-height: 16px
        font-weight: bold

        &:hover
          background: #efefef

    th.cur-view
      text-align: center

    table
      margin: 6px
      font-size: 14px

      th.dow
        cursor: default
        font-size: 12px
        width: 25px
        height: 26px

      tr

        td
          text-align: center
          overflow: hidden
          border: none

          &.day
            height: 0
            padding: 6px 0

          &.lastMonth, &.nextMonth
            color: #bbb

      tr:not(.week)

        td
          text-align: center
          border-radius: 4px
          cursor: pointer
          overflow: hidden
          border: none

          &:not(.active):hover
            background: #efefef

          &.active
            background: #222
            color: #fff

          &.startDate
            background: #222
            color: white
            border-radius: 4px 0 0 4px

          &.endDate
            background: #222
            color: white
            border-radius: 0 4px 4px 0

          &.inDateRange
            background: #eee
            border-radius: 0
            border-bottom: solid 1px white

      tr.week
        border-radius: none

        &.active
          background: #222
          color: #fff

        &:not(.active):hover
          background: #efefef
          cursor: pointer

        td
          text-align: center

        td:nth-child(1)
          border-radius: 4px 0 0 4px

        td:nth-child(7)
          border-radius 0 4px 4px 0

    .months-view, .years-view
      ul
        list-style: none
        padding: 14px 0 0 0px
        margin: 0px

        li
          float: left
          padding: 18px 12px
          width: 26px
          border-radius: 4px
          margin: 0 0 8px 8px
          cursor: pointer

          &.active
            background: #222
            color: #fff

          &:not(.active):hover
            background: #efefef

    .hours-view
      ul
        list-style: none
        padding: 14px 0 0 0px
        margin: 0px

        li
          float: left
          padding: 3px 12px
          width: 26px
          border-radius: 4px
          margin: 0 0 8px 8px
          cursor: pointer

          &.active
            background: #222
            color: #fff

          &:not(.active):hover
            background: #efefef

    .hours-view-period
      ul
        list-style: none
        padding: 14px 0 0 0px
        margin: 0px

        li
          float: left
          padding: 3px 5px
          width: 40px
          border-radius: 4px
          margin: 0 0 8px 8px
          cursor: pointer
          text-align: center

          span
            width: 40px

          &.active
            background: #222
            color: #fff

          &:not(.active):hover
            background: #efefef
